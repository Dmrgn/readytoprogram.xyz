---
export interface Props {
	title: string;
}
const { title } = Astro.props as Props;

import Navigation from "../components/Navigation.astro"
import Footer from "../components/Footer.astro"

import { SEO } from "astro-seo";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
        <SEO 
            title={title+" | Ready to Program Docs"}
            description={`Find documentation about how to use ${title} in HoltSoft's Ready to Program with hsa.`}
            openGraph={{
                basic:{
                    title:`Learn about ${title} on Ready to Program's documentation.`,
                    type:"website",
                    image:"https://readytoprogram.netlify.app/assets/docs/graphics/shapes/table.png",
                    url:"https://readytoprogram.xyz",
                },
                image:{
                    alt:"Example graphic of ready to program in use."
                }
            }}
        />
	</head>
	<body>
        <Navigation />
        <main>
            <slot />
        </main>
        <Footer />
	</body>
</html>
<style>
    body {
        @apply dark:bg-dark dark:text-lightAccent bg-light text-dark relative;
        min-height: 100vh;
        font-family: "Roboto Mono", monospace;
    }
</style>